<figure class="hover-image <?= $this->floatClass ?>"<?php if ($this->margin): ?> style="<?= $this->margin ?>"<?php endif; ?> itemscope itemtype="http://schema.org/ImageObject" itemprop="associatedMedia">
<?php if ($this->href): ?>
<a href="<?= $this->href ?>"<?php if ($this->linkTitle): ?> title="<?= $this->linkTitle ?>"<?php endif; ?><?= $this->attributes ?> itemprop="contentUrl">
<div class="image-content">
  <?php endif; ?>
  <?php $this->insert('picture_default', $this->picture); ?>
  <?php if ($this->caption): ?>
  <figcaption class="caption" itemprop="caption"><?= $this->caption ?></figcaption>
  <?php endif; ?>
  <?php if ($this->copyright): ?>
  <span class="imageCopy">&copy; <?= $this->copyright ?></span>
  <?php endif; ?>
  <?php if ($this->href): ?>
</div>
</a>
<?php endif; ?>
</figure>

